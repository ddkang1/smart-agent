# Smart Agent Tools Configuration Example
# Copy this file to tools.yaml and update with your values

tools:
  think_tool:
    enabled: true
    repository: "git+https://github.com/ddkang1/mcp-think-tool"  # Replace with your repository
    url: "http://localhost:8000/sse"
    module: "mcp_think_tool"
    launch_cmd: "uvx"
    
  search_tool:
    enabled: true
    repository: "git+https://github.com/ddkang1/ddg-mcp"  # Replace with your repository
    url: "http://localhost:8001/sse"
    module: "ddg_mcp"
    launch_cmd: "uvx"
    
  python_tool:
    enabled: true
    repository: "ghcr.io/ddkang1/mcp-py-repl:latest"  # Replace with your Docker image
    url: "http://localhost:8002/sse"
    launch_cmd: "docker"
    storage_path: "/Users/dkang1/smart-agent/storage/python_repl"
    
  # Remote tool example (no need for repository or launch_cmd)
  remote_tool:
    enabled: true
    url: "https://api.remote-tool.com/sse"

# Tool configuration schema
# Each tool should have:
# - enabled: Whether the tool is enabled (required)
# - url: URL to access the tool (required)
# 
# For local tools that need to be launched:
# - repository: Git repository or Docker image (REQUIRED for local tools)
# - launch_cmd: Command to launch the tool (REQUIRED for local tools, one of: "docker", "uvx", "npx")
# 
# Optional fields:
# - name: Human-readable name (defaults to tool ID)
# - module: Python module name (for tools launched with uvx or npx)
# - storage_path: Path for tool data storage (for Docker container tools)
# - env_prefix: Custom environment variable prefix
